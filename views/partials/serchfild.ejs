
<div class="search-field" style="margin-top: 20px;">
    <form class="search-form" action="/home/property/1 " method="GET">
        <div class="row">
            <div class="col-lg-12 d-flex align-items-center justify-content-center toggle-wrap">
                <div class="row">
                    <div class="col">
                        <h4 class="search-title">Search Properties For</h4>
                    </div>
                    
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-xs-6">
                <input  class="app-select form-control"  type="text" name="title" value="<%= platinum.title %>" placeholder="title">
                   
            </input>
            </div>
            <div class="col-lg-3 col-md-6 col-xs-6">
              <input class="app-select form-control"  list="catagory" name="catagory" value="<%= platinum.catagory %>" placeholder="catagory">
                <datalist id="catagory">
                  <option value="condominum">
                  <option value="Appartment">
                  <option value="villa">
                  <option value="office">
                </datalist>
            </div>
            <div class="col-lg-3 col-md-6 col-xs-6">
              <input name="bedroom" list="bedroom" class="app-select form-control"  value="<%= platinum.bedroom %>" placeholder="bedroom" >
              <datalist id="bedroom">
                <option value="1">
                <option value="2">
                <option value="3">
                <option value="4">
              </datalist>   
          </div>
          <div class="col-lg-3 col-md-6 col-xs-6">
            <input name="bathroom" list="bathroom" class="app-select form-control"  value="<%= platinum.bathroom %>" placeholder="bathroom" >
            <datalist id="bathroom">
              <option value="1">
              <option value="2">
              <option value="3">
              <option value="4">
            </datalist>   
        </div>
      
   
    <div class="col-lg-3 col-md-6 col-xs-6">
        <button style="margin-top: 0px;" class="primary-btn" type="submit">Search Properties<span class="lnr lnr-arrow-right"></span></button>
      </div>
      </div>
       
    </form>
  </div>