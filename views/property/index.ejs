<h1 style="margin-top: 15px; text-align: center;">PROPERTIES</h1>
	<!-- Start property Area -->
	<section class="property-area section-gap relative" id="property">
		<div class="container">
		
			<div class="row" >

        <% for( var i = 0; i < platinum.length; i++ ) { %>
        

			<a href="/home/platinum/<%= platinum[i].id%>"><div  class="col-lg-4">
					<div class="single-property">
						<div class="images">
							<img class="img-fluid mx-auto d-block" style="min-height: 250px; height: -webkit-fill-available;" src="/uploads/<%= platinum[i].image%>" alt="">
							<span><%= platinum[i].rent%></span>
						</div>

						<div class="desc">
							<div class="top d-flex justify-content-between">
								<h4><a href="#"></a></h4>
								<h4 style="color: black;"><%= platinum[i].price%></h4>
							</div>
							<div class="middle">
								<div class="d-flex justify-content-start">
                  <p><%= platinum[i].catagory%></p>
                  <p><%= platinum[i].city%></p>
									<p><%= platinum[i].location%></p>
									
								</div>
								<div class="d-flex justify-content-start">
                  <p>Area: <%= platinum[i].size%></p>
                  <p>Bath : <%= platinum[i].bedroom%></p>
									<p>Bed : <%= platinum[i].bathroom%></p>
                  
								
								</div>
							</div>

						</div>
					</div>
        </div>
      </a>
        <% }; %> 
     

      </div>
		</div>
	</section>
	<!-- End property Area -->

<div class="row">
    <!-- pagination -->
    <% if(pages > 0) { %> <!-- show pagination if there is pages -->
      <nav class="mx-auto">
        <ul class="pagination">
          <!-- FIRST ITEM -->
          <% if(current == 1) { %>
            <li class="page-item disabled">
              <a class="page-link" href="#">First</a>
            </li>
          <% } else { %>
            <li class="page-item">
              <a class="page-link" href="/home/property/1">First</a>
            </li>
          <% } %>

          <!-- ITEMS  -->
          <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
          <% if(i !== 1) { %>
            <li class="page-item disabled">
              <a class="page-link" href="#">...</a>
            </li>
          <% } %>
          <% for(; i <= (Number(current) + 4) && i <= pages; i++) { %>
            <% if(i == current) { %>
              <li class="page-item active">
                <a class="page-link" href="<%= i %>">
                  <%= i %>
                </a>
              </li>
            <% } else { %>
              <li class="page-item">

                <a class="page-link" href="/home/property/<%= i %>?title=<%= query.title %>&catagory=<%= query.catagory %>&bedroom=<%= query.bedroom %>&bathroom=<%= query.bathroom %>">
                  <%= i %>
                </a>
               
              </li>
            <% } %>
            <% if (i == Number(current) + 4 && i < pages) { %>
               <li class="page-item disabled">
                 <a class="page-link" href="#">...</a>
               </li>
            <% } %>
          <% } %>

          <!-- LAST ITEM -->
          <% if(current == pages) { %>
            <li class="page-item disabled">
              <a class="page-link" href="#">
                Last
              </a>
            </li>
          <% } else { %>
            <li class="page-item">
              <a class="page-link" href="/home/property/<%= pages %>">
                Last
              </a>
            </li>
          <% } %>
        </ul>
      </nav>
    <% } %>
  </div>
</div>









