<%- include('./partials/header.ejs')  %> 
<%- include('./partials/nav.ejs')  %> 


<h1 style="margin-top: 70px; text-align: center; margin-bottom: 20px;">Sign up</h1>

          <!--registration-->

          <div class="tab-pane" id="Registration" style="width: 70%;
          margin-left: auto;
          margin-right: auto;
          border: solid;">
            <form role="form" action="/register" method="POST" class="form-horizontal" style="    width: 90%;
            margin-left: auto;
            margin-right: auto; 
            text-align: center;">
                <div class="form-group">
                <!-- <div class="col-sm-12"> -->
                    <div class="row">
                        <div class="col-md-4 col-sm-6" style="margin-top: 20px;">
                            <select  class="form-control">
                                <option>Mr</option>
                                <option>Ms</option>
                                <option>Mrs</option>
                            </select>
                        </div>
                        <div class="col-md-8 col-sm-6" style="margin-top: 20px;">
                            <input type="text" class="form-control" name="username" placeholder="username"  />
                        </div>
                    </div>
                </div>
                <!-- </div> -->


                <div class="form-group">
                    <label for="email" class=" control-label">Email</label>
                    <div class="">
                        <input type="email"name="email"  class="form-control" id="email" />
                    </div>
                </div>
                <div class="form-group">
                    <label class=" control-label">Mobile</label>
                    <div class="">
                        <input  class="form-control" name="phonenumber" placeholder="Mobile" />
                    </div>
                </div>
                <div class="form-group">
                    <label  class=" control-label">Password</label>
                    <div class="">
                        <input  class="form-control" type="password" name="password" placeholder="password" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-2 col-md-2">
                    </div>
                    <div class="col-sm-10 col-md-10">
                        <button style="margin-bottom: 20px; background: #ea6c5d;" class="btn  btn-lg" >
                            Save & Continue
                        </button>
                    </div>
                </div>              
            </form>
        </div>

