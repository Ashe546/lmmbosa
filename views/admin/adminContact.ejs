
<%- include('../partials/header.ejs')  %> 


<% if(!currentUser){ %>
    Login pls
   
   <% } else { %>
   <%= currentUser.username || "" %>
   
   <% } %>
   
   <div class="container" style="margin-top: 60px;">
   <div class="row" style="margin-left: auto; margin-right: auto;">
       <div class="col-2" style="height: 150px; margin-left: 45px; min-width: 200px;">
           <h3>Total Property</h3>   
           <h1 style="margin-left: 30px;"><%=contact.length * current %> Of <%= count %>  </h1>
        </div>
   </div>
   
   <div class="row">
       <div class="col-1">Unic-id</div>
       <div class="col-1">Preview</div>
       <div class="col-2">Date</div>
       <div class="col-2">type</div>
       <div class="col-2">city</div>
       <div class="col-1">Delete</div>
       <div class="col-1">Edit</div>
       <div class="col-1">View</div>
   </div>
   <% for( var i = 0; i < contact.length; i++ ) { %>
   <div class="row" style="margin-top: 20px;">
       <div class="col-1">Unic-id</div>
       <div class="col-1">Preview</div>
       <div class="col-2">Date</div>
       <div class="col-2">type</div>
       <div class="col-2">city</div>  
       <div class="col-1"> <button class="btn btn-success" > View</button></div>
       <div class="col-1"> <button class="btn btn-primary" > Edit</button></div>
       <div class="col-1"> <button class="btn btn-danger"> Delete</button></div>
   </div>
   <% }; %> 
   
   
   
   
   <div class="row">
       <!-- pagination -->
       <% if(pages > 0) { %> <!-- show pagination if there is pages -->
         <nav class="mx-auto">
           <ul class="pagination">
               <li class="page-item">
                   <a class="page-link" href="/admin/contact/contact/<%= current - 1 %>">privious</a>
                 </li>
   
             <!-- FIRST ITEM -->
             <% if(current == 1) { %>
               <li class="page-item disabled">
                 <a class="page-link" href="#">First</a>
               </li>
             <% } else { %>
               <li class="page-item">
                 <a class="page-link" href="/admin/contact/contact/1">First</a>
               </li>
             <% } %>
   
             <!-- ITEMS  -->
             <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
             <% if(i !== 1) { %>
               <li class="page-item disabled">
                 <a class="page-link" href="#">...</a>
               </li>
             <% } %>
             <% for(; i <= (Number(current) + 4) && i <= pages; i++) { %>
               <% if(i == current) { %>
                 <li class="page-item active">
                   <a class="page-link" href="<%= i %>">
                     <%= i %>
                   </a>
                 </li>
               <% } else { %>
                 <li class="page-item">
                   <a class="page-link" href="/admin/contact/contact/<%= i %>">
                     <%= i %>
                   </a>
                 </li>
               <% } %>
               <% if (i == Number(current) + 4 && i < pages) { %>
                  <li class="page-item disabled">
                    <a class="page-link" href="#">...</a>
                  </li>
               <% } %>
             <% } %>
   
             <!-- LAST ITEM -->
             <% if(current == pages) { %>
               <li class="page-item disabled">
                 <a class="page-link" href="#">
                   Last
                 </a>
               </li>
             <% } else { %>
               <li class="page-item">
                 <a class="page-link" href="/admin/<%= pages %>">
                   Last
                 </a>
               </li>
             <% } %>
           </ul>
         </nav>
       <% } %>
     </div>
   </div>
   
   
   
   
   </div>

   <%- include('../partials/footer.ejs')  %> 